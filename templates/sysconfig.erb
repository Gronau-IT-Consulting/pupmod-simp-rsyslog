<%
opts = "-c#{@compat_mode}"

if not @hostlist.empty? then
  opts = opts + " -l #{Array(@hostlist).join(':')}"
end

if not @domainlist.empty? then
  opts = opts + " -s #{Array(@domainlist).join(':')}"
end

if @suppress_noauth_warn then
  opts = opts + " -w"
end

if @disable_remote_dns then
  opts = opts + " -x"
end
-%>
SYSLOGD_OPTIONS="<%= opts %>"
